{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.py"
    }
  ],
  "functions": {
    "server.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}